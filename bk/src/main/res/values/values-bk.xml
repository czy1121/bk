        <!-- background color -->
        <attr name="bkBackgroundColor" />
        <attr name="bkBackgroundColorSelected" />
        <attr name="bkBackgroundColorPressed" />
        <attr name="bkBackgroundColorDisabled" />

        <!-- stroke -->
        <attr name="bkStrokeColor" />
        <attr name="bkStrokeColorSelected" />
        <attr name="bkStrokeColorPressed" />
        <attr name="bkStrokeColorDisabled" />
        <attr name="bkStrokeWidth" />
        <attr name="bkStrokeDashWidth" />
        <attr name="bkStrokeDashGap" />

        <!-- corner -->
        <attr name="bkCornerRadius" />
        <attr name="bkCornerPosition" />

        <!-- gradient -->
        <attr name="bkGradientType" />
        <attr name="bkGradientCenterX" />
        <attr name="bkGradientCenterY" />
        <attr name="bkGradientRadius" />
        <attr name="bkGradientOrientation" />
        <attr name="bkGradientColors" />
        <attr name="bkGradientStartColor" />
        <attr name="bkGradientCenterColor" />
        <attr name="bkGradientEndColor" />

        <!-- shadow -->
        <attr name="bkShadowRadius" />
        <attr name="bkShadowColor" />

        <!-- shadow padding -->
        <attr name="bkShadowPadding" />
        <attr name="bkShadowPaddingLeft" />
        <attr name="bkShadowPaddingTop" />
        <attr name="bkShadowPaddingRight" />
        <attr name="bkShadowPaddingBottom" />

        <!-- content padding -->
        <attr name="bkContentPadding" />
        <attr name="bkContentPaddingLeft" />
        <attr name="bkContentPaddingTop" />
        <attr name="bkContentPaddingRight" />
        <attr name="bkContentPaddingBottom" />

    </declare-styleable>

    <declare-styleable name="BKLinearLayout">

        <!-- background color -->
        <attr name="bkBackgroundColor" />
        <attr name="bkBackgroundColorSelected" />
        <attr name="bkBackgroundColorPressed" />
        <attr name="bkBackgroundColorDisabled" />

        <!-- stroke -->
        <attr name="bkStrokeColor" />
        <attr name="bkStrokeColorSelected" />
        <attr name="bkStrokeColorPressed" />
        <attr name="bkStrokeColorDisabled" />
        <attr name="bkStrokeWidth" />
        <attr name="bkStrokeDashWidth" />
        <attr name="bkStrokeDashGap" />

        <!-- corner -->
        <attr name="bkCornerRadius" />
        <attr name="bkCornerPosition" />

        <!-- gradient -->
        <attr name="bkGradientType" />
        <attr name="bkGradientCenterX" />
        <attr name="bkGradientCenterY" />
        <attr name="bkGradientRadius" />
        <attr name="bkGradientOrientation" />
        <attr name="bkGradientColors" />
        <attr name="bkGradientStartColor" />
        <attr name="bkGradientCenterColor" />
        <attr name="bkGradientEndColor" />

        <!-- shadow -->
        <attr name="bkShadowRadius" />
        <attr name="bkShadowColor" />

        <!-- shadow padding -->
        <attr name="bkShadowPadding" />
        <attr name="bkShadowPaddingLeft" />
        <attr name="bkShadowPaddingTop" />
        <attr name="bkShadowPaddingRight" />
        <attr name="bkShadowPaddingBottom" />

        <!-- content padding -->
        <attr name="bkContentPadding" />
        <attr name="bkContentPaddingLeft" />
        <attr name="bkContentPaddingTop" />
        <attr name="bkContentPaddingRight" />
        <attr name="bkContentPaddingBottom" />

    </declare-styleable>

</resources>