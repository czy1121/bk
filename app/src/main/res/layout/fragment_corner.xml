            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#DEDEDE"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="50dp"
            android:paddingHorizontal="10dp"
            android:text="diagonalUpward"
            android:textColor="@color/black"
            android:textSize="11dp"
            app:bkCornerRadius="auto"
            app:bkStrokeColor="@color/black"
            app:bkStrokeColorSelected="#ff9900"
            app:bkStrokeWidth="2dp" />

        <me.reezy.cosmo.bk.BKTextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#DEDEDE"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="50dp"
            android:paddingHorizontal="10dp"
            android:text="topLeft"
            android:textColor="@color/black"
            android:textSize="11dp"
            app:bkCornerRadius="auto"
            app:bkStrokeColor="@color/black"
            app:bkStrokeColorSelected="#ff9900"
            app:bkStrokeWidth="2dp"
            app:layout_wrapBefore="true" />

        <me.reezy.cosmo.bk.BKTextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#DEDEDE"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="50dp"
            android:paddingHorizontal="10dp"
            android:text="topRight"
            android:textColor="@color/black"
            android:textSize="11dp"
            app:bkCornerRadius="auto"
            app:bkStrokeColor="@color/black"
            app:bkStrokeColorSelected="#ff9900"
            app:bkStrokeWidth="2dp" />

        <me.reezy.cosmo.bk.BKTextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#DEDEDE"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="50dp"
            android:paddingHorizontal="10dp"
            android:text="bottomLeft"
            android:textColor="@color/black"
            android:textSize="11dp"
            app:bkCornerRadius="auto"
            app:bkStrokeColor="@color/black"
            app:bkStrokeColorSelected="#ff9900"
            app:bkStrokeWidth="2dp" />

        <me.reezy.cosmo.bk.BKTextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="10dp"
            android:background="#DEDEDE"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="50dp"
            android:paddingHorizontal="10dp"
            android:text="bottomRight"
            android:textColor="@color/black"
            android:textSize="11dp"
            app:bkCornerRadius="auto"
            app:bkStrokeColor="@color/black"
            app:bkStrokeColorSelected="#ff9900"
            app:bkStrokeWidth="2dp" />

        <me.reezy.cosmo.bk.BKTextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#DEDEDE"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="50dp"
            android:paddingHorizontal="10dp"
            android:text="sideLeft"
            android:textColor="@color/black"
            android:textSize="11dp"
            app:bkCornerRadius="auto"
            app:bkStrokeColor="@color/black"
            app:bkStrokeColorSelected="#ff9900"
            app:bkStrokeWidth="2dp"
            app:layout_wrapBefore="true" />

        <me.reezy.cosmo.bk.BKTextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#DEDEDE"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="50dp"
            android:paddingHorizontal="10dp"
            android:text="sideRight"
            android:textColor="@color/black"
            android:textSize="11dp"
            app:bkCornerRadius="auto"
            app:bkStrokeColor="@color/black"
            app:bkStrokeColorSelected="#ff9900"
            app:bkStrokeWidth="2dp" />

        <me.reezy.cosmo.bk.BKTextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#DEDEDE"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="50dp"
            android:paddingHorizontal="10dp"
            android:text="sideTop"
            android:textColor="@color/black"
            android:textSize="11dp"
            app:bkCornerRadius="auto"
